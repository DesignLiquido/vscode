{
	"compilerOptions": {
		"baseUrl": ".",
        "paths": {
            "@designliquido/birl": ["node_modules/@designliquido/birl/dist"],
            "@designliquido/birl/*": ["node_modules/@designliquido/birl/dist/*"],
            "@designliquido/delegua": ["node_modules/@designliquido/delegua/dist"],
            "@designliquido/delegua/*": ["node_modules/@designliquido/delegua/dist/*"],
			"@designliquido/delegua-node": ["node_modules/@designliquido/delegua-node/dist"],
            "@designliquido/delegua-node/*": ["node_modules/@designliquido/delegua-node/dist/*"],
			"@designliquido/mapler": ["node_modules/@designliquido/portugol-studio/dist"],
            "@designliquido/mapler*": ["node_modules/@designliquido/portugol-studio/dist/*"],
            "@designliquido/portugol-studio": ["node_modules/@designliquido/portugol-studio/dist"],
            "@designliquido/portugol-studio/*": ["node_modules/@designliquido/portugol-studio/dist/*"],
            "@designliquido/potigol": ["node_modules/@designliquido/potigol/dist"],
            "@designliquido/potigol/*": ["node_modules/@designliquido/potigol/dist/*"],
            "@designliquido/visualg": ["node_modules/@designliquido/visualg/dist"],
            "@designliquido/visualg/*": ["node_modules/@designliquido/visualg/dist/*"],
			// Para linkagem (`yarn link ...`), comente as linhas acima e descomente as linhas abaixo.
            // "@designliquido/birl": ["node_modules/@designliquido/birl/fontes"],
            // "@designliquido/birl/*": ["node_modules/@designliquido/birl/fontes/*"],
            // "@designliquido/delegua": ["node_modules/@designliquido/delegua/fontes"],
            // "@designliquido/delegua/*": ["node_modules/@designliquido/delegua/fontes/*"],
			// "@designliquido/delegua-node": ["node_modules/@designliquido/delegua-node/fontes"],
            // "@designliquido/delegua-node/*": ["node_modules/@designliquido/delegua-node/fontes/*"],
			// "@designliquido/mapler": ["node_modules/@designliquido/mapler/fontes"],
            // "@designliquido/mapler/*": ["node_modules/@designliquido/mapler/fontes/*"],
            // "@designliquido/portugol-studio": ["node_modules/@designliquido/portugol-studio/fontes"],
            // "@designliquido/portugol-studio/*": ["node_modules/@designliquido/portugol-studio/fontes/*"],
            // "@designliquido/potigol": ["node_modules/@designliquido/potigol/fontes"],
            // "@designliquido/potigol/*": ["node_modules/@designliquido/potigol/fontes/*"],
            // "@designliquido/visualg": ["node_modules/@designliquido/visualg/fontes"],
            // "@designliquido/visualg/*": ["node_modules/@designliquido/visualg/fontes/*"]
        },
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "dist",
		"lib": [
			"WebWorker",
			"ES2020"
		],
		"sourceMap": true,
		"mapRoot": "./dist",
		"rootDir": "fontes",
		"strict": true,   /* enable all strict type-checking options */
		/* Additional Checks */
		// "noImplicitReturns": true, /* Report error when not all code paths in function return a value. */
		// "noFallthroughCasesInSwitch": true, /* Report errors for fallthrough cases in switch statement. */
		// "noUnusedParameters": true,  /* Report errors on unused parameters. */

		"noImplicitAny": false,
		"removeComments": false,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"inlineSourceMap": false,
		"preserveConstEnums": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": false,
		"noUnusedParameters": false
	},
	"exclude": [
		"node_modules"
	]
}
