{
    "comments": {
        "lineComment": "#"
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "^.*(faca|faça|entao|então|senão|senao|senãose|senaose|escolha|gere|tipo).*$|^.*\\([^)]*$|^.*\\=\\s*$",
        "decreaseIndentPattern": "^\\s*(fim|senão|senao|senaose|senãose|\\)).*$"
      }
    }