{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "portugolstudio",
    "scopeName": "source.portugolstudio",
    "patterns": [
        { "include": "#keywords" },
        { "include": "#functions" },
        { "include": "#constants" },
        { "include": "#numbers" },
        { "include": "#logical" },
        { "include": "#types" },
        { "include": "#comments" },
        { "include": "#arithmetic" },
        { "include": "#assignments" },
        { "include": "#comparison" },
        { "include": "#strings" },
        { "include": "#storages" },
        { "include": "#identifiers" }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.portugolstudio",
                    "match": "(?i)\\b(programa|inicio|se|senao|para|faca|enquanto|escolha|caso|padrao|tente|pegue|finalmente|retorna|funcao|escreva|inteiro|real)\\b"
                }
            ]
        },
        "comments": {
            "patterns": [
				{
					"begin": "/\\*\\*(?!/)",
					"captures": {
						"0": {
							"name": "punctuation.definition.comment.portugolstudio"
						}
					},
					"end": "\\*/",
					"name": "comment.block.documentation.portugolstudio"
				},
				{
					"begin": "/\\*",
					"captures": {
						"0": {
							"name": "punctuation.definition.comment.portugolstudio"
						}
					},
					"end": "\\*/",
					"name": "comment.block.portugolstudio"
				},
				{
					"captures": {
						"1": {
							"name": "punctuation.definition.comment.portugolstudio"
						}
					},
					"match": "(//).*$\\n?",
					"name": "comment.line.double-slash.portugolstudio"
				}
			]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.language.portugolstudio",
                    "match": "(?i)\\b(falso|verdadeiro)\\b"
                }
            ]
        },
		"functions": {
			"patterns": [{
				"name": "keyword.function.portugolstudio",
				"match": "\\b(escreva|escreval)\\b"
			}]
		},
        "identifiers": {
            "patterns": [
                {
                    "name": "entity.other.attribute-name",
                    "match": "(\\b(super)\\b)|#[_a-zA-Z0-9]+"
                },
                {
                    "name": "entity.name.function",
                    "match": "((?<=classe\\s)|(?<=herda\\s))([_a-zA-Z0-9]+)"
                },
                {
                    "name": "entity.name.function",
                    "match": "([_a-zA-Z0-9]+)(?=[ ]*[=][ ]*(\\(|funcao))"
                },
                {
                    "name": "variable.parameter",
                    "match": "([_a-zA-Z0-9]+)(?=[ ]*[=])"
                },
                {
                    "name": "entity.other.attribute-name",
                    "match": "([_a-zA-Z0-9]+)(?=[ ]*[:])"
                },
                {
                    "name": "entity.name.function",
                    "match": "([_a-zA-Z0-9]+)(?=([\\s]*\\())"
                },
                {
                    "name": "variable.language",
                    "match": "[_a-zA-Z0-9]+"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.single.portugolstudio",
                    "begin": "\\'",
                    "end": "\\'",
                    "patterns": [
                        {
                            "name": "constant.character.escape.portugolstudio",
                            "match": "\\\\."
                        }
                    ]
                },
                {
                    "name": "string.quoted.double.portugolstudio",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.portugolstudio",
                            "match": "\\\\."
                        }
                    ]
                }
            ]
        }
    }
}
