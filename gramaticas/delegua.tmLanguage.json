{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Delegua",
	"patterns": [
		{ "include": "#keywords" },
		{ "include": "#functions" },
		{ "include": "#constants" },
		{ "include": "#numbers" },
		{ "include": "#logical" },
		{ "include": "#types" },
		{ "include": "#comments" },
		{ "include": "#arithmetic" },
		{ "include": "#assignments" },
		{ "include": "#comparison" },
		{ "include": "#strings" },
		{ "include": "#storages" },
		{ "include": "#identifiers" }
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.delegua",
				"match": "\\b(caso|const|constante|enquanto|escolha|escreva|fazer|finalmente|fixo|funcao|função|padrao|para|pegue|retorna|se|senao|senão|tente|var|variavel|variável)\\b"
			}]
		},
		"functions": {
			"patterns": [{
				"name": "keyword.function.delegua",
				"match": "\\b(aleatorio|aleatorioEntre|inteiro|mapear|ordenar|real|tamanho|texto|importar|ajuda|exemplo|limpar|salvar|carregar|fun1|fun1R|ajuda|exemplo|limpar|salvar|carregar|fun1|fun1R|linspace|fun2|fun2R|rand|aprox|pale|vet|qtd|plot|max|min|intervalo|mediana|smtr|media|ve|sqr|variancia|devpad|covar|coefvar|coefcorr|coluna|linha|transposta|matriz|matrizmult|matrizinv|matrizid|deter|csl|sen|cos|tan|arcos|arsen|artan|exp|log|pot|aleat|raizq|vmed|deltas|deltat|acel|mrufh|mrufhp|mruvel|mruvfh|mruvfhp|mruvvel|mruvvelp|inercia|vmmv|van|periodo|pid)\\b"
			}]
		},
		"constants": {
			"patterns": [{
				"name": "constant.language.delegua",
				"match": "\\b(falso|verdadeiro|isto|nulo)\\b"
			}]
		},
		"numbers": {
			"name": "constant.numeric",
			"match": "\\b[0-9]+(\\.[0-9]+)?\\b"
		},
		"logical": {
			"patterns": [{
				"name": "keyword.operator.logical.delegua",
				"match": "\\b(e|ou)\\b"
			}]
		},
		"types": {
			"patterns": [{
				"name": "storage.type.primitive.delegua",
				"match": "\\b(dicion[aá]rio|l[oó]gico|longo|m[oó]dulo|n[uú]mero|objeto|vetor|texto)\\b"
			}]
		},
		"comments": {
			"patterns": [
				{ 
					"match": "(//).*",
					"name": "comment.line.double-slash"
				}
			]
		},
		"arithmetic": {
			"patterns": [{
				"name": "keyword.operator.arithmetic.delegua",
				"match": "\\b(\\+|\\-|\\*|/|mod|div|\\:\\:)\\b"
			}]
		},
		"assignments": {
			"patterns": [{
				"name": "keyword.operator.assignment.delegua",
				"match": "\\b(\\=|\\:=)\\b"
			}]
		},
		"comparison": {
			"patterns": [{
				"name": "keyword.operator.comparison.delegua",
				"match": "\\b(<\\=|>\\=|\\=\\=|<|>|\\<\\>)\\b"
			}]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.single.delegua",
					"begin": "\\'",
					"end": "\\'",
					"patterns": [
						{
							"name": "constant.character.escape.delegua",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.double.delegua",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.delegua",
							"match": "\\\\."
						}
					]
			}]
		},
		"storages": {
			"patterns": [
				{
					"name": "storage.type.swift",
					"match": "\\b(classe|construtor)\\b"
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"name": "entity.other.attribute-name",
					"match": "(\\b(super)\\b)|#[_a-zA-Z0-9]+"
				},
				{
					"name": "entity.name.function",
					"match": "((?<=classe\\s)|(?<=herda\\s))([_a-zA-Z0-9]+)"
				},
				{
					"name":  "entity.name.function",
					"match": "([_a-zA-Z0-9]+)(?=[ ]*[=][ ]*(\\(|funcao))"
				},
				{
					"name":  "variable.parameter",
					"match": "([_a-zA-Z0-9]+)(?=[ ]*[=])"
				},
				{
					"name":  "entity.other.attribute-name",
					"match": "([_a-zA-Z0-9]+)(?=[ ]*[:])"
				},
				{
					"name": "entity.name.function",
					"match": "([_a-zA-Z0-9]+)(?=([\\s]*\\())"
				},
				{
					"name": "variable.language",
					"match": "[_a-zA-Z0-9]+"
				}
			]
		}
	},
	"scopeName": "source.delegua"
}